{% extends 'layout/layout.twig' %}

{% block styleHead %}
    {{ parent() }}
    <link href="{{ basePath('gotextension/metroui/css/metro-responsive.css') }}" media="screen" rel="stylesheet" type="text/css">
    <link href="{{ basePath('gotextension/metroui/css/metro-icons.css') }}" media="screen" rel="stylesheet" type="text/css">
    <link href="{{ basePath('gotextension/metroui/css/metro.css') }}" media="screen" rel="stylesheet" type="text/css">

    <style>
        html, body {
            height: 100%;
        }
        body {
        }
        .page-content {
            padding-top: 3.125rem;
            min-height: 100%;
            height: 100%;
        }
        .table .input-control.checkbox {
            line-height: 1;
            min-height: 0;
            height: auto;
        }

        @media screen and (max-width: 800px){
            #cell-sidebar {
                flex-basis: 52px;
            }
            #cell-content {
                flex-basis: calc(100% - 52px);
            }
        }
    </style>
{% endblock styleHead %}

{% block scriptHead %}
    {{ parent() }}
    <script type="text/javascript" src="{{ basePath('gotextension/metroui/js/metro.js') }}"></script>
    {{ gotHeader(adminHeaderMenu) }}
    {{ gotHeader(adminSideMenu) }}
{% endblock scriptHead %}

{% block contentBody %}
    <div class="app-bar fixed-top darcula" data-role="appbar">
        {{ gotRender(adminHeaderMenu) }}
    </div>

    <div class="page-content">
        <div class="flex-grid no-responsive-future" style="height: 100%;">
            <div class="row" style="height: 100%">
                <div class="cell size-x200" id="cell-sidebar" style="background-color: #71b1d1; height: 100%">
                    {{ gotRender(adminSideMenu) }}
                </div>
                <div class="cell auto-size padding20 bg-white" id="cell-content">
                    {% block content %}{{ content|raw }}{% endblock content %}
                </div>
            </div>
        </div>
    </div>
{% endblock contentBody %}

{% block inline %}{% endblock inline %}
